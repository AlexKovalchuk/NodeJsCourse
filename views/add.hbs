<h1>Add new course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input placeholder="Placeholder" id="title" type="text" class="validate" required name="title">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="enter title"></span>
    </div>

    <div class="input-field">
        <input placeholder="Placeholder" id="price" type="number" class="validate" required min="1" name="price">
        <label for="price">Price</label>
        <span class="helper-text" data-error="enter price"></span>
    </div>

    <div class="input-field">
        <input placeholder="Placeholder" id="img" type="text" class="validate" required name="img">
        <label for="img">Url img</label>
        <span class="helper-text" data-error="enter URL"></span>
    </div>

    <button class="btn btn-primary">Add Course</button>
</form>